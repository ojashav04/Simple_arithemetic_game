#include <stdio.h>
#include <stdlib.h>
#include <time.h>

int main() {
    int a, b, answer, userAnswer;
    int score = 0;
    int i, choice;

    // Seed for random numbers
    srand(time(0));

    printf("=====================================\n");
    printf("     SIMPLE ARITHMETIC QUIZ GAME     \n");
    printf("=====================================\n");

    printf("How many questions do you want to answer? ");
    scanf("%d", &choice);

    for (i = 1; i <= choice; i++) {
        // Generate random numbers between 1 and 10
        a = rand() % 10 + 1;
        b = rand() % 10 + 1;

        // Randomly select operator (1 = +, 2 = -, 3 = *)
        int op = rand() % 3 + 1;

        printf("\nQuestion %d:\n", i);
        if (op == 1) {
            printf("%d + %d = ", a, b);
            answer = a + b;
        } 
        else if (op == 2) {
            printf("%d - %d = ", a, b);
            answer = a - b;
        } 
        else {
            printf("%d * %d = ", a, b);
            answer = a * b;
        }

        scanf("%d", &userAnswer);

        if (userAnswer == answer) {
            printf("Correct!\n");
            score++;
        } else {
            printf("Wrong! The correct answer is %d\n", answer);
        }
    }

    printf("\n-------------------------------------\n");
    printf("You got %d out of %d correct!\n", score, choice);
    printf("Thank you for playing!\n");
    printf("-------------------------------------\n");

    return 0;
}
